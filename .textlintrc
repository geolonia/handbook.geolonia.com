{
  "rules": {
    "preset-ja-technical-writing": {
      "no-mix-dearu-desumasu": {
        "preferInHeader": "である",
        "preferInBody": "ですます",
        "preferInList": "である",
        "strict": false
      },
      "ja-no-weak-phrase": true,
      "no-unmatched-pair": true,
      "no-doubled-conjunction": true,
      "ja-no-abusage": true
    },
    "preset-jtf-style": {
      "1.1.1.本文": true,
      "2.1.5.カタカナ": true,
      "2.1.6.カタカナの長音": true,
      "3.2.カタカナ語間のスペースの有無": true,
    },
    "prh": {
      "rulePaths": [],
      "rules": [
        {
          "pattern": "/して下さい/",
          "message": "強い命令型を避け、「してください」を使います。",
          "expected": "してください"
        },
        {
          "pattern": "/クリック/",
          "message": "特定の入力方法に依存せず、「選択してください」を使います。",
          "expected": "選択してください"
        }
      ]
    }
  }
}
